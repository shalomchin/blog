<h1>Editing post</h1>
<%= form_for @post do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 

    <p>
    <%= f.label :date %><br>
    <%= f.date_field :date %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
 <%= link_to 'Back', posts_path %>